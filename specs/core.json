                                  "enabled": {
                                    "type": "boolean"
                                  }
                                }
                              }
                            }
                          },
                          "group_sharing": {
                            "type": "boolean"
                          },
                          "group": {
                            "type": "object",
                            "properties": {
                              "enabled": {
                                "type": "boolean"
                              },
                              "expire_date": {
                                "type": "object",
                                "properties": {
                                  "enabled": {
                                    "type": "boolean"
                                  }
                                }
                              }
                            }
                          },
                          "default_permissions": {
                            "type": "integer"
                          },
                          "federation": {
                            "type": "object",
