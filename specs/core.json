      },
      "CoreNavigationApps": {
        "type": "object",
        "properties": {
          "ocs": {
            "type": "object",
            "properties": {
              "meta": {
                "$ref": "#/components/schemas/OCSMeta"
              },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "order": {
                      "description": "Should always be an integer, but there is a bug. See https://github.com/nextcloud/server/issues/32828",
                      "oneOf": [
                        {
                          "type": "integer"
                        },
                        {
                          "type": "string"
                        }
                      ]
                    },
                    "href": {
                      "type": "string"
                    },
                    "icon": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "active": {
                      "type": "boolean"
                    },
                    "classes": {
                      "type": "string"
                    },
                    "unread": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "CoreLoginFlowInit": {
        "type": "object",
        "properties": {
          "poll": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string"
              },
              "endpoint": {
                "type": "string"
              }
            }
          },
          "login": {
            "type": "string"
          }
        }
      },
