                          "api": {
                            "type": "object",
                            "properties": {
                              "generate": {
                                "type": "string"
                              },
                              "validate": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      },
                      "provisioning_api": {
                        "type": "object",
