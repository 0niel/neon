                                "type": "boolean"
                              }
                            }
                          },
                          "sharebymail": {
                            "type": "object",
                            "properties": {
                              "enabled": {
                                "type": "boolean"
                              },
                              "send_password_by_mail": {
                                "type": "boolean"
                              },
                              "upload_files_drop": {
                                "type": "object",
                                "properties": {
                                  "enabled": {
                                    "type": "boolean"
                                  }
                                }
                              },
                              "password": {
                                "type": "object",
                                "properties": {
                                  "enabled": {
                                    "type": "boolean"
                                  },
                                  "enforced": {
                                    "type": "boolean"
                                  }
                                }
                              },
                              "expire_date": {
                                "type": "object",
                                "properties": {
                                  "enabled": {
                                    "type": "boolean"
                                  },
                                  "enforced": {
                                    "type": "boolean"
                                  }
                                }
                              }
                            }
                          }
                        }
                      },
                      "notes": {
                        "type": "object",
                        "properties": {
                          "api_version": {
                            "type": "array",
